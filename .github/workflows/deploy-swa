name: Deploy to Azure Static Web Apps

on:
  push:
    branches: [ main ]
  workflow_dispatch:

permissions:
  contents: read

jobs:
  build_and_deploy:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
        with:
          submodules: true

      - name: Deploy
        uses: Azure/static-web-apps-deploy@v1
        with:
          # Add this secret in GitHub: Settings → Secrets and variables → Actions
          # Name: AZURE_STATIC_WEB_APPS_API_TOKEN (value from Azure portal)
          azure_static_web_apps_api_token: ${{ secrets.AZURE_STATIC_WEB_APPS_API_TOKEN }}

          repo_token: ${{ secrets.GITHUB_TOKEN }}   # PR comments, etc.
          action: upload

          # You have a pure static site (no build step)
          app_location: "/"                # where index.html lives
          api_location: ""                 # no API
          app_artifact_location: "/"       # the files to publish
          skip_app_build: true             # <-- prevents Oryx from trying to build
